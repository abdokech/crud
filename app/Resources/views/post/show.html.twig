{% extends 'base.html.twig' %}

{% block body %}
    <h1>Post</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ resource.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ resource.name }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ resource.content }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('posts_list') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('post_edit', { 'id': resource.id }) }}">Edit</a>
        </li>
    </ul>
{% endblock %}
