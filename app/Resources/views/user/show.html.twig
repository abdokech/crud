{% extends 'base.html.twig' %}

{% block body %}
    <h1>User</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ resource.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ resource.nom }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ resource.prenom }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('users_list') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('user_edit', { 'id': resource.id }) }}">Edit</a>
        </li>
    </ul>
{% endblock %}
